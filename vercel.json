{
  "version": 2,
  "name": "spotigame",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "NEXTAUTH_URL": "@nextauth-url",
    "NEXTAUTH_SECRET": "@nextauth-secret",
    "SPOTIFY_CLIENT_ID": "@spotify-client-id",
    "SPOTIFY_CLIENT_SECRET": "@spotify-client-secret"
  },
  "functions": {
    "src/pages/api/socketio.ts": {
      "maxDuration": 30
    }
  }
}
